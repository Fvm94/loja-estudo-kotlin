    <fragment
        android:id="@+id/navigation_bag"
        android:name="com.franciscovm.loja.ui.fragment.bag.BagFragment"
        android:label="@string/title_bag"
        tools:layout="@layout/fragment_bag"/>

    <fragment
        android:id="@+id/navigation_me"
        android:name="com.franciscovm.loja.ui.fragment.me.MeFragment"
